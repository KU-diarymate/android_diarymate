<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/analysis_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="감정키워드"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/analysis_down_chevron_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@+id/analysis_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/analysis_title_tv"
        app:layout_constraintStart_toEndOf="@+id/analysis_title_tv"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="8dp"
        android:background="@drawable/down_chevron" />

    <TextView
        android:id="@+id/analysis_period_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="최근 1주"
        app:layout_constraintTop_toTopOf="@+id/analysis_title_tv"
        app:layout_constraintBottom_toBottomOf="@+id/analysis_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/analysis_background_iv"
        app:layout_constraintDimensionRatio="1500:1680"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/background_green"
        android:layout_marginTop="60dp"/>
    
    <TextView
        android:id="@+id/analysis_keyword1_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="자전거"
        android:textSize="45dp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintStart_toStartOf="@id/analysis_background_iv"
        app:layout_constraintEnd_toEndOf="@id/analysis_background_iv"
        app:layout_constraintTop_toTopOf="@id/analysis_background_iv"
        app:layout_constraintBottom_toBottomOf="@id/analysis_background_iv"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/analysis_keyword2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="운동"
        android:textSize="22dp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintStart_toEndOf="@id/analysis_keyword3_tv"
        app:layout_constraintBottom_toTopOf="@id/analysis_keyword1_tv"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/analysis_keyword3_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="독서"
        android:textSize="13dp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintEnd_toStartOf="@id/analysis_keyword1_tv"
        app:layout_constraintBottom_toTopOf="@id/analysis_keyword1_tv"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="0dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/analysis_keyword4_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="영화"
        android:textSize="35dp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintStart_toEndOf="@id/analysis_keyword1_tv"
        app:layout_constraintBottom_toTopOf="@id/analysis_keyword1_tv"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="0dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/analysis_keyword5_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시험"
        android:textSize="40dp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintStart_toEndOf="@id/analysis_keyword1_tv"
        app:layout_constraintTop_toBottomOf="@id/analysis_keyword1_tv"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-20dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/analysis_keyword6_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게임"
        android:textSize="22dp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintEnd_toStartOf="@id/analysis_keyword5_tv"
        app:layout_constraintTop_toBottomOf="@id/analysis_keyword1_tv"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/analysis_keyword7_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="데이트"
        android:textSize="30dp"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintEnd_toStartOf="@id/analysis_keyword1_tv"
        app:layout_constraintTop_toBottomOf="@id/analysis_keyword1_tv"
        android:layout_marginEnd="-20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/black"/>

</androidx.constraintlayout.widget.ConstraintLayout>