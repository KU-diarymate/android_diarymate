<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/setting_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp" />
    
    <TextView
        android:id="@+id/setting_alarm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI 알림"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="30dp"
        android:textSize="15dp" />
    
    <ku.kpro.diary_mate.CustomToggleButton
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_alarm_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_alarm_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"/>
    
    <TextView
        android:id="@+id/setting_auto_diary_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채팅 기반 일기 자동 생성"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="30dp"
        android:textSize="15dp" />

    <ku.kpro.diary_mate.CustomToggleButton
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_auto_diary_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_auto_diary_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"/>
    
    <TextView
        android:id="@+id/setting_future_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미래의 나에게 편지"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="210dp"
        android:layout_marginLeft="30dp"
        android:textSize="15dp" />

    <ku.kpro.diary_mate.CustomToggleButton
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_future_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_future_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"/>
    
    <TextView
        android:id="@+id/setting_past_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과거의 나의 일기 추천"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="260dp"
        android:layout_marginLeft="30dp"
        android:textSize="15dp" />

    <ku.kpro.diary_mate.CustomToggleButton
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_past_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_past_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"/>
    
    <TextView
        android:id="@+id/setting_analysis_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키워드 분석 기간"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="30dp"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/setting_analysis_period_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1주"
        app:layout_constraintTop_toTopOf="@+id/setting_analysis_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_analysis_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="50dp" />


    <ImageView
        android:id="@+id/setting_dropdown_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:layout_constraintTop_toTopOf="@+id/setting_analysis_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_analysis_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/triangle"
        android:backgroundTint="@color/green_theme" />

    <TextView
        android:id="@+id/setting_theme_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테마"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="30dp"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/setting_theme_red_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_theme_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_theme_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="180dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/red_theme"
        android:src="@drawable/check"
        android:padding="2dp"/>

    <ImageView
        android:id="@+id/setting_theme_yellow_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_theme_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_theme_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="150dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/yellow_theme"
        android:src="@drawable/check"
        android:padding="2dp"/>

    <ImageView
        android:id="@+id/setting_theme_green_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_theme_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_theme_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="120dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/green_theme"
        android:src="@drawable/check"
        android:padding="2dp"/>

    <ImageView
        android:id="@+id/setting_theme_blue_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_theme_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_theme_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="90dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/blue_theme"
        android:src="@drawable/check"
        android:padding="2dp"/>

    <ImageView
        android:id="@+id/setting_theme_purple_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_theme_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_theme_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="60dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/purple_theme"
        android:src="@drawable/check"
        android:padding="2dp"/>

    <ImageView
        android:id="@+id/setting_theme_pink_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_theme_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_theme_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"
        android:background="@drawable/circle"
        android:backgroundTint="@color/pink_theme"
        android:src="@drawable/check"
        android:padding="2dp"/>
    
</androidx.constraintlayout.widget.ConstraintLayout>