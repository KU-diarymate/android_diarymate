<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <TextView
        android:id="@+id/setting_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:fontFamily="@font/pretendard_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp" />
    
    <TextView
        android:id="@+id/setting_alarm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI 알림"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="30dp"
        android:textSize="17dp" />
    
    <ku.kpro.diary_mate.custom_view.CustomToggleButton
        android:id="@+id/setting_alarm_btn"
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_alarm_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_alarm_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"/>
    
    <TextView
        android:id="@+id/setting_auto_diary_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="채팅 기반 일기 자동 생성"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="170dp"
        android:layout_marginLeft="30dp"
        android:textSize="17dp" />

    <ku.kpro.diary_mate.custom_view.CustomToggleButton
        android:id="@+id/setting_auto_diary_btn"
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_auto_diary_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_auto_diary_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"/>
    
    <TextView
        android:id="@+id/setting_future_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="미래의 나에게 편지"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="30dp"
        android:textSize="17dp" />

    <ku.kpro.diary_mate.custom_view.CustomToggleButton
        android:id="@+id/setting_future_btn"
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_future_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_future_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"/>
    
    <TextView
        android:id="@+id/setting_past_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="과거의 나의 일기 추천"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="290dp"
        android:layout_marginLeft="30dp"
        android:textSize="17dp" />

    <ku.kpro.diary_mate.custom_view.CustomToggleButton
        android:id="@+id/setting_past_btn"
        android:layout_width="40dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@+id/setting_past_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_past_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"/>
    
    <TextView
        android:id="@+id/setting_analysis_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="키워드 분석 기간"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="30dp"
        android:textSize="17dp" />

    <TextView
        android:id="@+id/setting_analysis_period_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1주"
        android:fontFamily="@font/pretendard_regular"
        android:textSize="17dp"
        app:layout_constraintTop_toTopOf="@+id/setting_analysis_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_analysis_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp"
        android:drawableRight="@drawable/triangle"
        android:drawableTint="@color/green_theme"
        android:drawablePadding="8dp" />


