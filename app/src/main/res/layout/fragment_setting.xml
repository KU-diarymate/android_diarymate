    <TextView
        android:id="@+id/setting_theme_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="테마"
        android:fontFamily="@font/pretendard_regular"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="30dp"
        android:textSize="17dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/setting_theme_colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/setting_theme_tv"
        app:layout_constraintBottom_toBottomOf="@+id/setting_theme_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="30dp">

        <ImageView
            android:id="@+id/setting_theme_red_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="200dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/red_theme"
            android:src="@color/transparent"
            android:padding="2dp"/>

        <ImageView
            android:id="@+id/setting_theme_yellow_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="160dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/yellow_theme"
            android:src="@color/transparent"
            android:padding="2dp"/>

        <ImageView
            android:id="@+id/setting_theme_green_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="120dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/green_theme"
            android:src="@color/transparent"
            android:padding="2dp"/>

        <ImageView
            android:id="@+id/setting_theme_blue_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="80dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/blue_theme"
            android:src="@color/transparent"
            android:padding="2dp"/>

        <ImageView
            android:id="@+id/setting_theme_purple_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="40dp"
            android:background="@drawable/circle"
            android:backgroundTint="@color/purple_theme"
            android:src="@color/transparent"
            android:padding="2dp"/>

        <ImageView
            android:id="@+id/setting_theme_pink_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/circle"
            android:backgroundTint="@color/pink_theme"
            android:src="@color/transparent"
            android:padding="2dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>